section#photos
  .line
  .container
    .row
      .col-md-4
        = image_tag 'pages/bottom.png', class: 'img-responsive about-img'
        h2 Wedding Gallery
        p.red These photos are from instagram with hashtag #foncyandkat
      .col-md-8
        #wedding-photo.carousel.slide data-ride="carousel"
          .carousel-inner
            - @photos.each_slice(3).with_index do |(*photos), index|
              .item class="#{'active' if index == 0}"
                .row
                  - photos.each do |record|
                    .col-md-4.col-sm-4.col-xs-12.animated.fadeInLeftBig
                      = link_to record.image_url, class: 'gallery-images' do
                        .photo-gallery
                          = image_tag record.image_url, class: 'img-responsve'
          a.left.carousel-control data-slide="prev" href="#wedding-photo"
            span.glyphicon.glyphicon-chevron-left
          a.right.carousel-control data-slide="next" href="#wedding-photo"
            span.glyphicon.glyphicon-chevron-right
